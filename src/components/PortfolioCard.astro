---
import ButtonPrimary from "./ButtonPrimary.astro";
import MyPortableText from "./portable-text/MyPortableText.astro";
import TwoItemsList from "./TwoItemsList.astro";

const {
  cardHeading,
  cardBody,
  cardImage,
  cardImageAlt,
  cardList,
  projectSlug,
} = Astro.props;
---

<div class="flex flex-col lg:flex-row gap-5 overflow-hidden">
  <div class="lg:w-2/3 lg:max-h-[80vh]">
    <img
      src={cardImage}
      alt={cardImageAlt}
      class="object-cover w-full h-full"
    />
  </div>
  <div class="w-full lg:w-1/3 flex flex-col">
    <div>
      <h3 class="text-2xl sm:text-3xl pb-4">{cardHeading}</h3>
      <MyPortableText content={cardBody} />
      <TwoItemsList listItems={cardList} />
    </div>
    <div class="my-auto pt-8 pb-2">
      <ButtonPrimary
        buttonText="view"
        buttonHref={`/portfolio/${projectSlug}`}
      />
    </div>
  </div>
</div>
