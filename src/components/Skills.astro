---
import MyPortableText from "./portable-text/MyPortableText.astro";
import TwoItemsList from "./TwoItemsList.astro";

const { heading, body, listItems } = Astro.props;
---

<section class="pt-10 md:pt-32 space-y-2 md:space-y-8">
  <h2 class="text-2xl sm:text-3xl md:text-6xl">{heading}</h2>
  <div class="space-y-4">
    <div class="max-w-md cou">
      <MyPortableText content={body} />
    </div>
    <TwoItemsList containerStyles="md:columns-2" listItems={listItems} />
  </div>
</section>
