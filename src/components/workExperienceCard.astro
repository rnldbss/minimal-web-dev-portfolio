---
import MyPortableText from "./portable-text/MyPortableText";
import SanityImage from "./SanityImage";
const { image, company, date, description } = Astro.props;
---

<div class="grid grid-cols-8 gap-y-2 sm:grid-cols-12 sm:gap-x-4">
  <div class="col-start-1">
    <SanityImage image={image} alt={image.alt} width={100} height={100} className="rounded w-12 sm:w-26 aspect-square"/>
   
  </div>
  <div class="col-start-2 ml-4 sm:ml-0 col-span-full self-center">
    <h3>{company}</h3>
    <span class="dark:text-on-level-0-dark">{date}</span>
  </div>
  <div class="space-y-2 col-span-full sm:col-start-2">
    <MyPortableText content={description} />
  </div>
</div>
