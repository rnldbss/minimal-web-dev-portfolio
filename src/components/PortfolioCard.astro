---
import MyPortableText from "./portable-text/MyPortableText.astro";

const { cardHeading, cardBody, cardImage, cardImageAlt } = Astro.props;
---

<div class="flex gap-5 max-h-[80vh] overflow-hidden">
  <div><img src={cardImage} alt={cardImageAlt} class="object-cover" /></div>
  <div>
    <h3 class="text-2xl">{cardHeading}</h3>
    <MyPortableText content={cardBody} />

    <ul>
      <li></li>
    </ul>
  </div>
</div>
