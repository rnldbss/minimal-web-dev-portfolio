---
import MyPortableText from "./portable-text/MyPortableText.astro";

const { heading, body, image, imageAlt } = Astro.props;
---

<section class="pt-10 space-y-8">
  <h2>{heading}</h2>
  <div class="flex gap-10">
    <div class="flex gap-52">
      <div class="space-y-4">
        <MyPortableText content={body} />
      </div>
    </div>
    <img src={image} class="object-cover w-2/3" alt={imageAlt} />
  </div>
</section>
